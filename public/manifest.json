{
  "manifest_version": 3,

  "name": "U History",
  "description": "Save & Read Chrome History on Your Google Drive",
  "version": "1.0.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "identity",
    "storage"
  ],

  "oauth2": {
    "client_id": "445850840649-e1se49kodirhbilhgmoo99st0u3g3mho.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },

  "key": "",

  "host_permissions": [
    "<all_urls>"
  ]
}
